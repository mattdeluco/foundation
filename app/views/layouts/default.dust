<!DOCTYPE html>
<html>
<head>
  <title>{+title /}</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="shortcut icon" type="image/x-icon" href="/img/icons/favicon.ico">
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-theme.css">
  <link rel="stylesheet" href="/css/common.css">
</head>

<body ng-app="mean">

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation" data-ng-include="'/views/header.html'">
  </nav>

  {?message}
  <div class="alert alert-danger">
    {message}
  </div>
  {/message}

  {+body /}

  <div class="container">
    <hr/>
    <footer class="footer pull-right">
      {site.title} - {site.tagline} ({site.env})
    </footer>
  </div>

  <script type="text/javascript" src="/lib/jquery/dist/jquery.js"></script>
  <script type="text/javascript" src="/lib/bootstrap/dist/js/bootstrap.js"></script>

  <script type="text/javascript" src="/lib/angular/angular.js"></script>
  <script type="text/javascript" src="/lib/angular-route/angular-route.js"></script>
  <script type="text/javascript" src="/lib/angular-resource/angular-resource.js"></script>
  <script type="text/javascript" src="/lib/angular-cookies/angular-cookies.js"></script>
  <script type="text/javascript" src="/lib/angular-bootstrap/ui-bootstrap.js"></script>
  <script type="text/javascript" src="/lib/angular-ui-utils/ui-utils.js"></script>

  <!-- Angular Components -->
  <script type="text/javascript" src="/js/app.js"></script>
  <script type="text/javascript" src="/js/config.js"></script>
  <script type="text/javascript" src="/js/directives.js"></script>
  <script type="text/javascript" src="/js/filters.js"></script>

  <!-- Angular Services -->
  <script type="text/javascript" src="/js/services/global.js"></script>

  <!-- Angular Controllers -->
  <script type="text/javascript" src="/js/controllers/header.js"></script>
  <script type="text/javascript" src="/js/controllers/index.js"></script>

  <!-- Angular Init -->
  <script type="text/javascript" src="/js/init.js"></script>

  <script>
    var site = {
      title: '{site.title}',
      tagline: '{site.tagline}',
      env: '{site.env}'
    };
  </script>

</body>

</html>